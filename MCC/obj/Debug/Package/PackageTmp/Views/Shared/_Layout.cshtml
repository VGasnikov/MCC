        @RenderSection("scripts", required: false)
        <script>
            $(document).ready(function () {
                $('.apitranslate').popover({
                    html: true,
                    template: '<div class="popover"><div class="arrow"></div><h3 class="popover-title"></h3><div class="popover-content" style="color:#6f767e"></div></div>'
                });

                $('.apitranslate').focus(function () {
                    $(this).css({
                        backgroundColor: 'white',
                        outline: 'none',
                        borderColor: '#9ecaed',
                        boxShadow: '0 0 10px #9ecaed'
                    });
                });

                $('.apitranslate').on('blur', function () {
                    var val = $(this).text();
                    var field = $(this).attr('field');
                    var dataContent = $(this).attr('data-content');
                    var page = $(this).attr('page');
                    var lang = $(this).attr('lang');
                    var o = $(this);

                    $.ajax({
                        url: '/Translation/Save',
                        data: { Page: page, Field: field, Value: val, Language: lang },
                        success: function (data) {
                            if (val == '')
                                o.text(dataContent == null ? field : dataContent);
                            o.css({
                                backgroundColor: 'transparent',
                                borderColor: 'transparent',
                                boxShadow: '0 0 0 transparent'
                            });
                        },
                        statusCode: {
                            404: function (content) { alert('cannot find resource'); },
                            500: function (content) { alert('internal server error'); }
                        },
                        error: function (req, status, errorObj) {
                            // handle status === "timeout"
                            // handle other errors
                        }
                    });

                });
            });
        </script>
